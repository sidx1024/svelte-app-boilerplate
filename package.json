{
  "name": "svelte-app-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "lint": "eslint \"src/**/*.{js,svelte}\"",
    "format": "prettier --write --svelte-sort-order scripts-markup-styles ./**/*.{svelte,js,css,html}"
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "eslint": "^7.15.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^1.4.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.2.0"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
